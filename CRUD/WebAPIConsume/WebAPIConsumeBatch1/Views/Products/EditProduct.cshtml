@model Product

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Product ID</label>
        <input type="text" readonly asp-for="id" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Product Name">

    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Product Name</label>
        <input type="text" asp-for="pname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Product Name">

    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Product Category</label>
        <select class="form-control" asp-for="pcat">
            <option>Electronics</option>
            <option>Foods</option>
            <option>Cloths</option>
            <option>Others</option>
        </select>

    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Product Price</label>
        <input type="text" class="form-control" asp-for="price" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Price">

    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>