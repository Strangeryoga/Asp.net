
@{
    ViewData["Title"] = "Index";
}


@model List<Product>

<h1>Index</h1>

<a asp-controller="Products" asp-action="AddProduct" class="btn btn-info">Add Product</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Category</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var d in Model)
        {
            <tr>
                <th scope="row">@d.id</th>
                <td>@d.pname</td>
                <td>@d.pcat</td>
                <td>@d.price</td>
                <td>
                    <a asp-controller="Products" onclick="return confirm('Are You Sure?')" asp-action="DeleteProduct" asp-route-id="@d.id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="Products" asp-action="EditProduct" asp-route-id="@d.id" class="btn btn-sm btn-success">Edit</a>
                </td>
            </tr>
        }
        
        
    </tbody>
</table>