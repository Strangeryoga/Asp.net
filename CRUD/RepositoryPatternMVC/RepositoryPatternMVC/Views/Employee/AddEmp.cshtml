
@{
    ViewData["Title"] = "AddEmp";
}
@model Emp

<h1>AddEmp</h1>

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
       <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Dept</label>
        <input type="text" asp-for="Dept" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
       <span asp-validation-for="Dept"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Salary</label>
        <input type="text" asp-for="Salary" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
       <span asp-validation-for="Salary"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}