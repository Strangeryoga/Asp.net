
@{
    ViewData["Title"] = "AddProduct";
}

@model Product

<h1>AddProduct</h1>

<form method="post" asp-action="AddOrUpdateProduct">
    <div class="form-group">
        <label for="exampleInputEmail1">Product Name</label>
        <input type="text" asp-for="Pname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Pname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Product Category</label>
        <select class="form-control" asp-for="Pcat">
            <option>Electronics</option>
            <option>Foods</option>
            <option>Other</option>

        </select>
        <span asp-validation-for="Pcat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Product Price</label>
        <input type="text" asp-for="Price" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}